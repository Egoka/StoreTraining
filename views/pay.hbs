<h1>Корзина</h1>
<div id="pay">
    {{#if products.length}}
        <table>
            <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {{#each products}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <p><strong>Цена:</strong><span class="price">{{priceProduct}}</span></p>
        <form action="/orders" method="post">
            <button type="submit" class="btn">Купить</button>
        </form>
    {{else}}
        <p>Корзина пуста</p>
    {{/if}}
</div>