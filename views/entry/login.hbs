<div class="entry">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
                <li class="tab col s6"><a  href="#registration">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h3>Войти в магазин</h3>
            <form action="/entry/login" method="post">
                <div class="input-field">
                    {{#if emailError}}
                        <input id="email" name="email" type="email" class="validate invalid" required>
                        <label for="email">Email</label>
                        <span class="helper-text" data-error="Не верный email"></span>
                    {{else}}
                        <input id="email" name="email" type="email" class="validate" required>
                        <label for="email">Email</label>
                        <span class="helper-text" data-error="Email"></span>
                    {{/if}}
                </div>
                <div class="input-field">
                    {{#if passwordError}}
                        <input id="password" name="password" type="password" class="validate invalid" required>
                        <label for="password">Пароль</label>
                        <span class="helper-text" data-error="Не верный пароль"></span>
                    {{else}}
                        <input id="password" name="password" type="password" class="validate" required>
                        <label for="password">Пароль</label>
                        <span class="helper-text" data-error="password"></span>
                    {{/if}}
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn btn-primary"type="submit">Войти</button>
            </form>
        </div>
        <div id="registration" class="col s6 offset-s3">
            <h3>Зарегистрироваться</h3>
            <form action="/entry/registration" method="post">
                <div class="input-field">
                    <input id="reg-name" name="name" type="text" required>
                    <label for="reg-name">Имя</label>
                </div>
                <div class="input-field">
                    {{#if emailErr}}
                        <input id="reg-email" name="email" type="email" class="validate invalid" required>
                        <label for="reg-email">Email</label>
                        <span class="helper-text" data-error="Такой email уже зарегистрирован"></span>
                    {{else}}
                        <input id="reg-email" name="email" type="email" class="validate" required>
                        <label for="reg-email">Email</label>
                        <span class="helper-text" data-error="Email"></span>
                    {{/if}}
                </div>
                <div class="input-field">
                    <input id="reg-password" name="password" type="password" class="validate" required>
                    <label for="reg-password">Пароль</label>
                    <span class="helper-text" data-error="password"></span>
                </div>
                <div class="input-field">
                    {{#if passwordErr}}
                        <input id="confirm" name="confirm" type="password" class="validate invalid" required>
                        <label for="confirm">Пароль еще раз</label>
                        <span class="helper-text" data-error="Пароль не повторился"></span>
                    {{else}}
                        <input id="confirm" name="confirm" type="password" class="validate" required>
                        <label for="confirm">Пароль еще раз</label>
                        <span class="helper-text" data-error="password"></span>
                    {{/if}}
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn btn-primary"type="submit">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>