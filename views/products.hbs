<h1>Каталог продуктов</h1>
<a href="/">Начальная страница</a>
{{#if product.length}}
    {{#each product}}
    <div class="row">
        <div class="col s8 offset-s3">
            <div class="card">
                <div class="card-image">
                    <img src="{{img}}" alt="{{title}}">
                </div>
                <div class="card-content">
                    <span class="card-title">{{title}}</span>
                    <p class="price">{{price}}</p>
                </div>
                <div class="card-action action-pay">
                    <a href="/products/{{_id}}" target="_blank">Посмотреть продукт</a>
                    {{#if @root.isEntry}}<!--from variables.js-->
                        {{#ifeq userId @root.userId}}
                            <a href="/products/{{_id}}/edit?allow=true">Редактировать</a>
                        {{/ifeq}}
                        <form action="/pay/add" method="post">
                            <input type="hidden" name="id" value="{{_id}}">
                            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                            <button class="btn btn-primaty">Купить</button>
                        </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
{{else}}
    <p>Продуктов пока нет.</p>
{{/if}}