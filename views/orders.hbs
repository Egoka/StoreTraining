<h1>Заказы</h1>
{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Заказ <small>{{_id}}</small>
                        </span>
                        <p class="date">Дата: {{date}}</p>
                        <p><em>{{user.userId.name}}</em>{{user.userId.email}}</p>
                        <ol>
                            {{#each products}}
                                <li>
                                    {{_doc.product.title}}
                                    <b class="price" style="font-size: 15px">{{_doc.product.price}}</b>(x<strong>{{_doc.count}}</strong>)
                                </li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Цена: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Заказов пока нет</p>
{{/if}}