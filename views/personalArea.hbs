<h1>Личный кабинет</h1>
<div class="row">
    <div class="col s6">
        {{#if user.avatarURL}}
            <img class="avatar" src="..\\{{user.avatarURL}}" alt="avatar-{{user.name}}">
        {{else}}
            <img class="avatar" src="https://1cau.ru/images/about/artem.jpg" alt="avatar">
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/personalArea" method="post" enctype="multipart/form-data">
            <p>Ваш email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Ваше имя</label>
                <span class="helper-text" data-error="Введите имя" ></span>
            </div>
            <div class="file-field input-field">
                <input type="file" name="avatar">
                <input class="file-path validate" type="text" placeholder="Загрузите свою фотографию">
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn-large orange">Сохранить</button>
        </form>
    </div>
</div>